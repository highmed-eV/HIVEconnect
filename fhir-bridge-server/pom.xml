    <profiles>
        <profile>
            <id>circleci</id>
            <properties>
                <commandLineArguments>
                    --logging.level.root=error --logging.level.org.apache.camel=off
                </commandLineArguments>
            </properties>
        </profile>
        <profile>
            <id>docker</id>
            <activation>
                <property>
                    <name>name</name>
                    <value>!skip-docker</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>${docker-maven-plugin.version}</version>
                        <configuration>
                            <images>
                                <image>
                                    <alias>redis</alias>
                                    <name>redis:latest</name>
                                    <run>
                                        <ports>
                                            <port>6379:6379</port>
                                        </ports>
                                        <log>
                                            <enabled>true</enabled>
                                            <prefix>REDIS__</prefix>
                                            <color>green</color>
                                        </log>
                                        <wait>
                                            <time>2000</time>
                                        </wait>
                                    </run>
                                </image>
                                <image>
                                    <name>postgres:14</name>
                                    <alias>postgres</alias>
                                    <run>
                                        <env>
                                            <TZ>Europe/Berlin</TZ>
                                            <POSTGRES_PASSWORD>postgres</POSTGRES_PASSWORD>
                                            <POSTGRES_USER>postgres</POSTGRES_USER>
                                            <POSTGRES_DB>postgres</POSTGRES_DB>
                                        </env>
                                        <volumes>
                                            <bind>
                                                <volume>./db/init:/docker-entrypoint-initdb.d:ro</volume>
                                            </bind>
                                        </volumes>
                                        <ports>
                                            <port>${database.port}:${database.port}</port>
                                        </ports>
                                        <wait>
                                            <!--<log>database system is ready to accept connections</log>-->
                                            <time>5000</time>
                                        </wait>
                                        <log>
                                            <enabled>true</enabled>
                                            <prefix>DB__</prefix>
                                            <color>red</color>
                                        </log>
                                    </run>
                                </image>
                                <image>
                                    <name>numresearchdataplatform/num-ehrbase:latest</name>
                                    <alias>ehrbase</alias>
                                    <run>
                                        <env>
                                            <SPRING_PROFILES_ACTIVE>docker</SPRING_PROFILES_ACTIVE>
                                            <JDK_JAVA_OPTIONS>-XX:MaxRAMPercentage=70.0 -XX:MinRAMPercentage=70.0 -XX:InitialRAMPercentage=70.0</JDK_JAVA_OPTIONS>
                                            <DB_URL>jdbc:postgresql://postgres:5432/ehrbase</DB_URL>
                                            <SPRING_DATASOURCE_USERNAME>ehrbase_restricted</SPRING_DATASOURCE_USERNAME>
                                            <SPRING_DATASOURCE_PASSWORD>ehrbase_restricted</SPRING_DATASOURCE_PASSWORD>
                                            <SPRING_FLYWAY_USER>ehrbase</SPRING_FLYWAY_USER>
                                            <SPRING_FLYWAY_PASSWORD>ehrbase</SPRING_FLYWAY_PASSWORD>
                                            <SPRING_REDIS_HOST>redis</SPRING_REDIS_HOST>
                                            <SECURITY_AUTHTYPE>NONE</SECURITY_AUTHTYPE>
                                            <MANAGEMENT_SERVER_PORT>7979</MANAGEMENT_SERVER_PORT>
                                            <MANAGEMENT_ENDPOINTS_WEB_EXPOSURE>env,health,info,metrics,prometheus</MANAGEMENT_ENDPOINTS_WEB_EXPOSURE>"
                                            <MANAGEMENT_ENDPOINTS_WEB_BASEPATH>/management</MANAGEMENT_ENDPOINTS_WEB_BASEPATH>
                                            <MANAGEMENT_ENDPOINT_ENV_ENABLED>false</MANAGEMENT_ENDPOINT_ENV_ENABLED>
                                            <MANAGEMENT_ENDPOINT_HEALTH_ENABLED>true</MANAGEMENT_ENDPOINT_HEALTH_ENABLED>
                                            <MANAGEMENT_ENDPOINT_HEALTH_DATASOURCE_ENABLED>false</MANAGEMENT_ENDPOINT_HEALTH_DATASOURCE_ENABLED>
                                            <MANAGEMENT_ENDPOINT_INFO_ENABLED>false</MANAGEMENT_ENDPOINT_INFO_ENABLED>
                                            <MANAGEMENT_ENDPOINT_METRICS_ENABLED>false</MANAGEMENT_ENDPOINT_METRICS_ENABLED>
                                            <MANAGEMENT_ENDPOINT_PROMETHEUS_ENABLED>false</MANAGEMENT_ENDPOINT_PROMETHEUS_ENABLED>
                                            <MANAGEMENT_ENDPOINT_HEALTH_PROBES_ENABLED>true</MANAGEMENT_ENDPOINT_HEALTH_PROBES_ENABLED>
                                            <CACHE_ENABLED>true</CACHE_ENABLED>
                                        </env>
                                        <ports>
                                            <port>9080:8080</port>
                                            <port>9999:7979</port>
                                        </ports>

                                        <dependsOn>
                                            <container>postgres</container>
                                            <container>redis</container>
                                        </dependsOn>
                                        <links>
                                            <link>postgres</link>
                                            <link>redis</link>
                                        </links>
                                        <wait>
                                            <http>
                                                <url>http://localhost:9999/management/health</url>
                                                <method>get</method>
                                                <status>200</status>
                                            </http>
                                            <time>50000</time>
                                        </wait>
                                        <log>
                                            <enabled>true</enabled>
                                            <prefix>EHRBASE__</prefix>
                                            <color>yellow</color>
                                        </log>
                                    </run>
                                </image>
                                <image>
                                    <name>${docker-image-name}</name>
                                    <build>
                                        <from>${docker-image-from}</from>
                                        <buildx>
                                            <platforms>
                                                <platform>linux/amd64</platform>
                                                <platform>linux/arm64</platform>
                                            </platforms>
                                        </buildx>
                                        <tags>
                                            <tag>latest</tag>
                                            <tag>${project.version}</tag>
                                        </tags>
                                        <ports>
                                            <port>8888</port>
                                            <port>7979</port>
                                        </ports>
                                        <entryPoint>
                                            <shell>exec java -jar ${project.artifactId}.${project.packaging} $JAVA_ARGS</shell>
                                        </entryPoint>
                                        <assembly>
                                            <mode>dir</mode>
                                            <basedir>/</basedir>
                                            <descriptor>docker-assembly.xml</descriptor>
                                        </assembly>
                                    </build>
                                    <run>
                                        <dependsOn>
                                            <container>ehrbase</container>
                                        </dependsOn>
                                        <links>
                                            <link>ehrbase</link>
                                        </links>
                                        <env>
                                            <SPRING_PROFILES_ACTIVE></SPRING_PROFILES_ACTIVE>
                                            <FHIR_BRIDGE_OPENEHR_URL>http://ehrbase:8080/ehrbase/</FHIR_BRIDGE_OPENEHR_URL>
                                            <FHIR_BRIDGE_OPENEHR_SECURITY_TYPE>NONE</FHIR_BRIDGE_OPENEHR_SECURITY_TYPE>
                                        </env>
                                        <ports>
                                            <port>9088:8888</port>
                                            <!--<port>9988:7979</port>-->
                                        </ports>
                                        <wait>
                                            <http>
                                                <url>http://localhost:9088/fhir-bridge/actuator/health</url>
                                                <method>get</method>
                                                <status>200</status>
                                            </http>
                                            <time>80000</time>
                                        </wait>
                                        <log>
                                            <enabled>true</enabled>
                                            <prefix>FHIR_BRIDGE__</prefix>
                                            <color>blue</color>
                                        </log>
                                    </run>
                                </image>
                            </images>
                        </configuration>
                        <executions>
                            <execution>
                                <id>prepare-it-environment</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>build</goal>
                                    <goal>start</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>remove-it-environment</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>stop</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
